</style>
</head>
<body>
<div id="wrapper">
<div id="header">
    <div id="gameinfo"><span id="unknowns"></span></div>
    <div id="status"></div>
</div>
<div id="sidebar">
    <ul id="users"></ul>
    <div id="messages"></div>
    <form id="chat">
      <input type="text" id="message-box" />
      <input id="say" type="submit" />
    </form>
</div>
<div id="field-wrapper">
    <canvas id="field" width="400" height="400"></canvas>
</div>
</div>
</body>
</html>
